template(name='ManageBikes')
	h1 Manage Bike Data
	p Click on any row to see a graphical history of bike locations
	+tabular table=TabularTables.ManageBikes selector=selector class="table table-striped table-hover table-bordered table-condensed" selector=currentSelector id="ManageBikes"

template(name='ManageBike_Title')
	h1.cd Track Bike History

template(name='ManageBike')
	//- Where the map will be generated based on the template helper in map.coffee
	.row
		#ManageBikeMap.float-map
	.row
		if SelectedBike
			table.table.table-hover.table-condensed
				//- Labels Row
				thead
					tr
						th Tag
						th Rider
						th Timestamp
						th Coordinates
				//- Actual Bike Data
				tbody
					with SelectedBike
						tr
							td {{Tag}}
							td {{Rider}}
							td {{formatDate Timestamp "short"}}
							td {{Coordinates}}
							//- NOTE: Need the double {{ }}
							//- otherwise the [0] and formatDate won't work
		else
			p Darker icons are the most recent known coordinates. Click on one to see more information here

