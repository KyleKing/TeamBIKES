each UserFact
	h1 Contact {{profile.name}}
	p Click this link to send an email from your preferred mail application,
		a(href='{{mailToUser}}')
			|  {{emails.[0].address}}
br
table.table.table-hover.table-condensed
	//- Labels Row
	thead
		tr
			th Name
			th createdAt
			th Email Address
			th Roles
	//- Actual Bike Data
	tbody
		each UserFact
			tr
				td {{profile.name}}
				td {{formatDate createdAt "shortest"}}
				td {{emails.[0].address}}
				td #{roles}
				//- NOTE: Need the double {{ }}
				//- otherwise the [0] and formatDate won't work

br
.form-group
	form
		//- allRoles = ['User', 'Mechanic', 'Employee', 'Redistribution', 'Admin', 'Root' ]
		.checkbox
			label
				input(type='checkbox' name='role' value='User' checked="{{isChecked 'UserVar'}}")
				| User - Access to only available bike locations
		br
		.checkbox
			label
				input(type='checkbox' name='role' value='Mechanic' checked="{{isChecked 'MechanicVar'}}")
				| Mechanic - Broader access and reporting
		br
		.checkbox
			label
				input(type='checkbox' name='role' value='Redistribution' checked="{{isChecked 'RedistributionVar'}}")
				| Redistribution -
		br
		.checkbox
			label
				input(type='checkbox' name='role' value='Employee' checked="{{isChecked 'EmployeeVar'}}")
				| Employee -
		br
		.checkbox
			label
				input(type='checkbox' name='role' value='Admin' checked="{{isChecked 'AdminVar'}}")
				| Admin - Nearly complete access, but some limitations for security purposes
		br
		.checkbox
			label
				input(type='checkbox' name='role' value='Admin' checked="{{isChecked 'AdminVar'}}")
				| Root - Complete access
		br
		br
		button(type='submit') Update Roles
