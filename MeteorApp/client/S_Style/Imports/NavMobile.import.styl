+above( 550px )
	nav.mobile
		display none

+below( 550px )
	nav.mobile
		align-items baseline
		background-color black
		bord( 2px, 0, 0, 0, solid, white )
		bottom 0
		display inline-flex
		flex-flow row nowrap
		position fixed
		width 100%
		z-index 20
		& a
			flex-grow 1
			padd( 20px, auto, auto, 20px )
			text-align center
			&:nth-of-type( n+2 )
				bord( 0, 2px, 0, 0, solid, white )
			& i
				color white

	// Spacing for page content
	.nav-bottom-spacing
		padding-bottom $nav-height-calc


