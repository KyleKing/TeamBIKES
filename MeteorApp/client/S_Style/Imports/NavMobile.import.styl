+above( 750px )
	nav.mobile
		display none

+below( 750px )
	nav.mobile
		align-items baseline
		background-color $secondary-bg-color
		bord( 2px, 0, 0, 0, solid, $off-white )
		bottom 0
		display inline-flex
		flex-flow row nowrap
		position fixed
		width 100%
		z-index 20
		& a
			flex-grow 1
			padd( 20px, auto, auto, 20px )
			text-align center
			// &:nth-of-type( n+2 )
			// 	bord( 0, 2px, 0, 0, solid, white )

	nav.mobile a
		&.active i
			color white
		& i
			color darken($off-white, 15%)

	// Spacing for page content
	footer
		margin-bottom $nav-height-calc
		background-color RGBA( 39, 40, 51, 1 )

