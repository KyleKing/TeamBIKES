body
	color #2B3E51
	font-family: 'PT Sans', sans-serif;

// Flat Buttons
button.flat
	color white
	// font-weight: bold
	border none
	padding 5px
	/*Flat Button styles*/
	text-shadow: 0 1px rgba(0, 0, 0, 0.3)
	cursor: pointer
	transition: background 0.2s ease-in-out
	border-radius: 4px
	background-color: #5499C7
	box-shadow: 0px 2px 0px 0px #154360
	&.big
		margin 10px
		padding-top 8px
		padding-left 10px
		padding-right 10px
		box-shadow: 0px 4px 0px 0px #154360
button.flat:hover
	background-color: #154360