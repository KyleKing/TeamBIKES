// Bulleted Value Proposition
.ab-secondary
	background-color $secondary-bg-color
	padd( 25px, auto, auto, 25px )
	z-index 2

// Trio of Card elements
.ab-secondary .static-card
	+above( $desktop )
		height 280px
	background-color white
	height 240px
	marg( 5px, 5px, 5px, 5px )
	padd( 10px, 15px, 15px, 10px )
	text-align center
	z-index 2
	& i
		background-color $brand-highlight
		border-radius 50%
		height 75px
		line-height 75px
		vertical-align middle
		width 75px



