// Trio of Card elements
.ab-pricing
	margin-bottom 30px
	margin-top 30px
	& button.nb-start
		font-size 20px
	& .static-card
		+above( 750px )
			height 480px
		border-radius 10%
		border 1px solid #BDC3C7
		height 400px
		text-align center
		&:hover
			border 2px solid $brand-highlight
		& .ab-pricing-bullets
			marg( 0, auto, auto, 0 )
			max-width 300px
		& ul
			text-align left
			& li
				margin-left 0
		&.focal
			height 450px
			marg( 5px, 5px, 5px, 5px )
			padd( 70px, 15px, 15px, 20px )
		&.smaller
			height 480px - 2*60px
			marg( 60px, 5px, 5px, 60px )
			padd( 20px, 15px, 15px, 20px )
		// Add a circle background to icon
		& i
			background-color $brand-highlight
			border-radius 50%
			color white
			height 75px
			line-height 75px
			vertical-align middle
			width 75px

footer.ab-footer
	background-color $soft-bg-color
	padd( 25px, 0, 0, 25px )
	text-align center
	& a
		color white
