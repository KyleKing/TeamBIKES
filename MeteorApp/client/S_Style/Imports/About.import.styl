// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Trio of Card elements
.ab_pricing
	// Negative margin inserted from Bootstrap:
	// marg(0px, 0px, 0px, 0px)
	margin-top 30px
	margin-bottom 30px
	& button.nb-start
		font-size 20px
	& .static-card
		text-align center
		height 400px
		+above(750px)
			height 480px
		border-radius 10%
		border 1px solid #BDC3C7
		&:hover
			border 2px solid nb_Highlight
		& ul
			text-align left
			& li
				margin-left 0px
		&.focal
			padd(50px, 15px, 15px, 20px)
			marg(5px, 5px, 5px, 5px)
			height 450px
		&.smaller
			padd(20px, 15px, 15px, 20px)
			marg(60px, 5px, 5px, 60px)
			height 480px - 2*60px
		& i
			// Add a circle background to icon
			width 75px
			height 75px
			line-height 75px
			vertical-align middle
			border-radius 50%
			background-color nb_Highlight
			color white

footer.ab_footer
	padd(25px, 0px, 0px, 25px)
	background-color lighten(#BDC3C7, 50%)
	text-align center
	& ul
		padd(0px, 0px, 0px, 0px)
		& li
			padd(5px, 0px, 0px, 5px)
			& a
				color #2B3E51
	& .next-parent
		height 88px
		display table
		& .next
			color #2B3E51
			display table-cell
			vertical-align middle

