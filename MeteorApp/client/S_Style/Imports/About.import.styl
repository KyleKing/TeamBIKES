// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Fixed cover photo
.ab-background
	img-fill( 650px, 'about/BikeRack.jpg', cover )
	left 0
	position absolute
	top 0
	z-index -1

.block-text
	width 50%

// Welcome Text
.ab-primary
	// for n in 1..6
	// 	h{n}
	// 		-webkit-text-stroke thin black
	color white
	padd( 180px, auto, auto, 180px )
	text-align center
	z-index 2

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Quick Summary and Value Proposition
.ab-quote
	background-color white
	padd( 120px, auto, auto, 120px )
	z-index 2

.cta-quote-container
	+above( 800px )
		marg( 0, auto, auto, 0 )
		max-width 800px
	display block
	marg( 0, 50px, 50px, 0 )
	max-width 100%

p.cta-quote
	color $nav_text
	font-size 22px
	text-align center

.bold
	font-weight bold

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Walk through
.ab-map-demo
	img-fill( 300px, 'about/EditedBikeMap.png', cover )



// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Bulleted Value Proposition
.ab-secondary
	background-color $soft-bg-color
	padd( 25px, auto, auto, 25px )
	z-index 2

// Trio of Card elements
.ab-secondary .static-card
	+above( 750px )
		height 280px
	background-color white
	height 240px
	marg( 5px, 5px, 5px, 5px )
	padd( 10px, 15px, 15px, 10px )
	text-align center
	z-index 2
	& i
		background-color $brand-highlight
		border-radius 50%
		height 75px
		line-height 75px
		vertical-align middle
		width 75px

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Images and Description
.Inspiration-img
	img-fill( $ab-height, 'about/TheInspiration.jpg', cover )
	// border-left 1px solid black
.Lock-img
	img-fill( $ab-height, 'about/TheLock.jpg', cover )

.explanation-container
	display inline-flex
	flex-flow row wrap
	& .full-explanation
		background-color gray
		bord( 1px, 0, 0, 1px, solid, black )
		flex 1 0 100%
		padd( 20px, auto, auto, 80px )
	& .half-explanation
		align-items center
		background-color gray
		bord( 0, 0, 0, 1px, solid, black )
		display flex
		flex 0 1 50%
		position relative
	& .text-content
		color white
		flex 1
		padd( 20px, 20px, 20px, 20px )
		text-align center
		& a
			color white



