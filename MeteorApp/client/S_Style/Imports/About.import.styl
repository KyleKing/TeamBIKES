.ab-pricing
	align-items center
	background-color white
	display inline-flex
	flex-flow row
	flex-wrap wrap
	justify-content space-around
	width 100%
	& .static-card
		background-color white
		border 1px solid $secondary-bg-color
		border-radius 10%
		margin-bottom 20px
		+above( $mobile )
			& .focal
				padding-bottom 40px
				padding-top 40px
		&:hover
			border 2px solid $brand-highlight
	& .inner-card
		align-items center
		display flex
		flex-flow column
		margin 20px
	& .icon-bg
		background-color $brand-highlight
		border-radius 50%
		height 75px
		text-align center
		width 75px
		& span.fa
			color white
			margin-top 21.5px
			// margin-top ( 75px-32px )/ 2px
	& .text-content
		align-items center
		color white
		display flex
		flex 1
		flex-flow column wrap
		marg( 0, auto, auto, 0 )
		padd( 45px, 45px, 45px, 45px )
		position relative
		text-align center
		& a
			color white
		& h3
			bord( 0, 0, 0, 4px, solid, lighten($primary-bg-color, 45%) )
			flex 2 0 100%
		& p
			flex 1 0 100%
			max-width 800px

footer.ab-footer
