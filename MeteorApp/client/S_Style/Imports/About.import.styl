// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Fixed cover photo
.ab_background
	position absolute
	// top nb_CalcHeight
	top 0px
	left 0px
	z-index -1
	Fill-Image(650px, "about/BikeRack.jpg", cover)

.block-text
	width 50%

// Welcome Text
.ab_primary
	z-index 2
	color white
	padd(180px, auto, auto, 180px)
	// Center Everything
	text-align center
	// marg(0, auto, auto, 0)
	// display block

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Quick Summary and Value Proposition
.ab_quote
	z-index 2
	background-color #FFFFFF
	padd(25px, auto, auto, 25px)

.CTA_quote_container
	display block
	marg(0px, 50px, 50px, 0px)
	max-width 100%
	+above(800px)
		marg(0px, auto, auto, 0px)
		max-width 800px

p.CTA_quote
	text-align center
	color #444444
	font-size 22px

.bold
	font-weight bold

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Walk through
.ab_map_demo
	Fill-Image(300px, "about/EditedBikeMap.png", cover)



// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Bulleted Value Proposition
.ab_secondary
	z-index 2
	padd(25px, auto, auto, 25px)
	background-color lighten(#BDC3C7, 50%)

// Trio of Card elements
.ab_secondary .static-card
	z-index 2
	text-align center
	background-color white
	height 240px
	+above(750px)
		height 280px
	padd(10px, 15px, 15px, 10px)
	marg(5px, 5px, 5px, 5px)
	& i
		// Add a circle background to icon
		width 75px
		height 75px
		line-height 75px
		vertical-align middle
		border-radius 50%
		background-color nb_Highlight

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Images and Description
ab_height = 300px
.Inspiration-img
	Fill-Image(ab_height, "about/TheInspiration.jpg", cover)
	// border-left 1px solid black
.Lock-img
	Fill-Image(ab_height, "about/TheLock.jpg", cover)

.ab_tertiary
	padd(30px, 0px, 0px, 30px)
	& .descriptor-parent
		// Table method for vertical centering
		height auto
		+above(750px)
			height ab_height
		display table
		& .descriptor
			// marg(0px, 30px, 30px, 0px)
			display table-cell
			vertical-align middle
			& .content
				marg(0px, 30px, 30px, 0px)
				+below(750px)
					marg(0px, 50px, 50px, 0px)
				border-radius 5px
				background-color white
				padd(0px, 10px, 10px, 15px)

