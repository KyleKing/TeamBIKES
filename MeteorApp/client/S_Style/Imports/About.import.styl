// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Fixed cover photo
.ab-background
	+below( $desktop )
		img-fill( 550px, 'about/cover.jpg', cover )
	img-fill( 650px, 'about/cover.jpg', cover )
	position absolute
	top 0
	z-index -1
// Welcome Text
.block-text
	+below( $desktop )
		width 100%
	width 50%
.ab-primary
	+below( $desktop )
		padd( 130px, auto, auto, 130px )
	color white
	padd( 180px, auto, auto, 180px )
	text-align center
	z-index 2

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Quick Summary and Value Proposition
.ab-quote
	background-color $primary-bg-color
	padd( 120px, auto, auto, 120px )
	z-index 2

.cta-quote-container
	+above( $desktop )
		marg( 0, auto, auto, 0 )
		max-width 800px
	display block
	marg( 0, 50px, 50px, 0 )
	max-width 100%
	& p.cta-quote
		color $nav-bg-color
		font-size 22px
		text-align center
.bold
	font-weight bold

// %%%%%%%%%%%%%%%%%%%%%%%%%%
// Walk through

// Images and Description
.inspiration-img
	img-fill( $std-element-height/2, 'about/TheInspiration.jpg', cover )
.lock-img
	img-fill( $std-element-height, 'about/TheLock.jpg', cover )
.unlock-img
	img-fill( $std-element-height, 'about/unlock.jpg', cover)
.return-img
	img-fill( $std-element-height, 'about/lock.jpg', cover)
.ab-map-demo
	img-fill( 300px, 'about/EditedBikeMap.png', cover )

.intro-expl-invert
	background-color white
	margin 0
	padding 40px
	text-align center
	width 100%

.explanation-container
	background-color $secondary-bg-color
	display inline-flex
	flex-flow row wrap
	& .full-explanation
		align-items center
		display flex
		flex 1 0 100%
		position relative
	& .text-content
		align-items center
		color white
		display flex
		flex 1
		flex-flow column wrap
		marg( 0, auto, auto, 0 )
		padd( 45px, 45px, 45px, 45px )
		position relative
		text-align center
		& a
			color white
		& h3
			bord( 0, 0, 0, 4px, solid, lighten($primary-bg-color, 45%) )
			flex 2 0 100%
		& p
			flex 1 0 100%
			max-width 800px

