ul.unstyled
	list-style-type none

+below( 750px )
	nav.midnight-header
		display none
+above( 750px )
	// Simple fixed flat bar with logo and navbar icons
	nav.midnight-header
		box-shadow 0 2px 3px 0 none
		height $nav-height-calc
		position fixed
		text-transform uppercase
		width 100%
		z-index 20
		// Logo
		& .nav-brand
			font-size 25px
			padd( 20px, 20px, auto, 20px )
			position relative
			text-decoration none
		& .nav-elements
			display inline-block
			float right
		& ul
			list-style-type none
			marg( 5px, auto, auto, 5px )
			padding-right $nav-left-space - $nav-element-space
			& li
				display inline
				& a
					marg( $nav-top-space, $nav-element-space - $nav-active-space, $nav-element-space - $nav-active-space, 0 )
					padd( 0, $nav-active-space, $nav-active-space, 5px )
					text-decoration none

	// // isActiveRoute Highlight
	// nav li a.active

	// Spacing for page content
	.nav-top-spacing
		padding-top $nav-height-calc

	// Midnight.js Alterations
	mix-nav-midnight( color-bg, display-type, color-main, color-bottom )
		background-color color-bg
		// bord( 0, 0, 0, 11px, solid, color-bottom )
		opacity 0.9
		& .nav-brand
			color color-main
			display display-type
		& a
			color color-main
		& li a.active
			bord( 0, 0, 0, 3px, solid, color-main )

	.midnightHeader.none
		mix-nav-midnight( none, none, white, green )
	.midnightHeader.blur
		mix-nav-midnight( $nav-bg-color, none, $text-color, green )
	.midnightHeader.default
		mix-nav-midnight( $nav-bg-color, inline-block, $text-color, green )
