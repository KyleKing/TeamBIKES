ul.unstyled
	list-style-type none

+below( 550px )
	nav.midnight-header
		display none
+above( 550px )
	// Simple fixed flat bar with logo and navbar icons
	nav.midnight-header
		bord( 0, 0, 0, 1px, solid, RGBA( 255, 255, 255, 0 ) )
		position fixed
		text-transform uppercase
		width 100%
		z-index 20
		// Logo
		& .nav-brand
			font-size 25px
			padd( 20px, 20px, auto, 20px )
			position relative
			text-decoration none
		& .nav-elements
			display inline-block
			float right
		& ul
			list-style-type none
			marg( 5px, auto, auto, 5px )
			padding-right $nav-left-space - $nav-element-space
			& li
				display inline
				& a
					marg( $nav-top-space, $nav-element-space - $nav-active-space, $nav-element-space - $nav-active-space, 0 )
					padd( 0, $nav-active-space, $nav-active-space, 5px )
					text-decoration none

	// isActiveRoute Highlight
	nav li a.active
		bord( 0, 0, 0, 3px, solid, white )

	// Spacing for page content
	.nav-top-spacing
		padding-top $nav-height-calc


	// Midnight.js Alterations
	mix-nav-midnight( color-bg, display-type, color-main )
		background-color color-bg
		& .nav-brand
			color color-main
			display display-type
		& a
			color color-main
		& li a.active
			border-color color-main

	.midnightHeader.none
		mix-nav-midnight( none, none, white )
	.midnightHeader.blur
		mix-nav-midnight( RGBA(255, 255, 255, 0.1), none, white )
	.midnightHeader.default
		bord( 0, 0, 0, 1px, solid, $nav-text-color )
		mix-nav-midnight( $nav-bg-color, inline-block, $nav-text-color )
