.mapContainer
  background #2db34a
  position fixed
  // space for bottom bar
  bottom 100px
  // space for nav bar
  top 50px
  left 0
  right 0
  height auto

.full-screen-map
  height 100%
  width 100%
  z-index 1

// Center and add a gray background, as otherwise hidden behind nav bar
// http://stackoverflow.com/questions/6794000/fixed-position-but-relative-to-container
.loading
  background-color:#ddd;
  position: fixed;
  padding: 2em;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);

